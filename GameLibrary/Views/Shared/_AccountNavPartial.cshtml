@using Microsoft.AspNetCore.Identity
@using GameLibrary.Models
@using GameLibrary.Extensions

@inject SignInManager<ApplicationUser> SignInManager

@if (!SignInManager.IsSignedIn(User))
{
    <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
    <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Register</a>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item text-white">Logged in as: @User.DisplayName()</li>
    </ul>
    <form class="form-inline" asp-controller="Account" asp-action="Logout" id="logoutForm">
        <a class="nav-link text-white" style="cursor: pointer;" onclick="logoutForm.submit()">Logout</a>
    </form>
}